<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Indian Restaurant Order & Pay</title>
<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #fff8f0;
    display: flex;
    justify-content: center;
    padding: 30px;
  }
  .container {
    background: white;
    width: 450px;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(255, 99, 71, 0.2);
    padding: 25px;
  }
  h2 {
    color: #e94e1b;
    text-align: center;
    margin-bottom: 20px;
    font-weight: 700;
    font-family: 'Georgia', serif;
  }
  .menu-item {
    border: 2px solid #e94e1b;
    border-radius: 10px;
    margin-bottom: 12px;
    padding: 15px 20px;
    cursor: pointer;
    position: relative;
    user-select: none;
    font-weight: 600;
    transition: background 0.3s ease;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .menu-item:hover {
    background: #ffe8dc;
  }
  .menu-item input {
    margin-right: 10px;
    cursor: pointer;
  }
  .order-summary {
    margin-top: 25px;
    font-size: 18px;
    font-weight: 700;
    color: #b3422b;
  }
  button {
    width: 100%;
    background: #e94e1b;
    border: none;
    padding: 12px;
    color: white;
    font-size: 18px;
    border-radius: 8px;
    cursor: pointer;
    margin-top: 20px;
  }
  button:disabled {
    background: #f3a893;
    cursor: not-allowed;
  }
</style>
</head>
<body>

<div class="container">
  <h2>Order Your Indian Meal</h2>
  
  <div class="menu-item"><label><input type="checkbox" data-price="250">Paneer Butter Masala <span>₹250</span></label></div>
  <div class="menu-item"><label><input type="checkbox" data-price="180">Dal Makhani <span>₹180</span></label></div>
  <div class="menu-item"><label><input type="checkbox" data-price="60">Butter Naan (2 pcs) <span>₹60</span></label></div>
  <div class="menu-item"><label><input type="checkbox" data-price="350">Chicken Biryani <span>₹350</span></label></div>
  <div class="menu-item"><label><input type="checkbox" data-price="90">Gulab Jamun (2 pcs) <span>₹90</span></label></div>
  
  <div class="menu-item"><label><input type="checkbox" data-price="200">Chole Bhature <span>₹200</span></label></div>
  <div class="menu-item"><label><input type="checkbox" data-price="150">Masala Dosa <span>₹150</span></label></div>
  <div class="menu-item"><label><input type="checkbox" data-price="175">Rajma Chawal <span>₹175</span></label></div>
  <div class="menu-item"><label><input type="checkbox" data-price="130">Aloo Gobi <span>₹130</span></label></div>
  <div class="menu-item"><label><input type="checkbox" data-price="110">Plain Naan (2 pcs) <span>₹110</span></label></div>

  <div class="order-summary" id="orderSummary">Total: ₹0</div>
  <button id="payBtn" disabled>Pay Now</button>
</div>

<script>
  const checkboxes = document.querySelectorAll('input[type="checkbox"]');
  const orderSummary = document.getElementById('orderSummary');
  const payBtn = document.getElementById('payBtn');
  let total = 0;

  checkboxes.forEach(cb => {
    cb.addEventListener('change', () => {
      total = 0;
      checkboxes.forEach(box => {
        if(box.checked) {
          total += parseFloat(box.dataset.price);
        }
      });
      orderSummary.textContent = `Total: ₹${total}`;
      payBtn.disabled = total === 0;
    });
  });

  payBtn.addEventListener('click', () => {
    alert(`Payment of ₹${total} successful! Thank you for your order.`);
    checkboxes.forEach(cb => cb.checked = false);
    total = 0;
    orderSummary.textContent = `Total: ₹0`;
    payBtn.disabled = true;
  });
</script>

</body>
</html>